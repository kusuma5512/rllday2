@model Foodiee.Models.Restaurant
<style>
	.card {
		border: 2px solid;
		padding: 20px;
		margin: 10px;
		border-radius: 8px;
		background-color: white;
		border-color: darkgoldenrod;
		font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
	}
</style>
<form method="post">
	<input type="text" name="restid"/>
	<input type="submit" />
</form>
@{
	<div class="row text-center">
		@{
			if (Model != null)
			{
				<div class="col-md-3">
					<div class="card">
						<div class="card-header">Users</div>
						<div class="card-body">
							<div>Restaurant id : @Model.RestaurantId</div>
							<div>Name : @Model.RestName</div>
							<div>Restaurant location : @Model.Location</div>
							<div>Description : @Model.Description</div>
							<div>Mobile number : @Model.PhoneNo</div>
							<div>Address : @Model.Email</div>
						</div>
						<footer>
							<a href="@Url.Action("UpdateRestaurant","Admin", new { restid = Model.RestaurantId })"
							   class="btn btn-info">Update</a>
							<a href="@Url.Action("DeleteRestaurant", "Admin", new { restid = Model.RestaurantId })"
							   class="btn btn-danger">Delete</a>
						</footer>
					</div>
				</div>

			}
			else
			{
				<div>NoData Found</div>
			}

		}
	</div>
}
