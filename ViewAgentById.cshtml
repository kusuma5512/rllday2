@model Foodiee.Models.DeliverReg

<style>
	.card {
		border: 2px solid;
		padding: 20px;
		margin: 10px;
		border-radius: 8px;
		background-color: white;
		border-color: darkgoldenrod;
		font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
	}
</style>
<form method="post">
	<input type="text" name="id" />
	<input type="submit" class="btn btn-info" />
</form>
<div class="row text-center">
	@{
		if (Model != null)
		{
				<div class="col-md-3">
					<div class="card">
						<div class="card-header">Users</div>
						<div class="card-body">
							<div>User ID: @Model.UserId</div>
							<div>Name: @Model.Fullname</div>
							<div>Username: @Model.Username</div>
							<div>Email: @Model.Email</div>
							<div>Mobile Number: @Model.Phone</div>
							<div>Address: @Model.Area, @Model.City</div>
							<div>Age: @Model.Age</div>
							<div>DL No: @Model.DlNo</div>
							<div>Vehicle No: @Model.VehicleNo</div>
							<div>Security Q1: @Model.Sq1</div>
							<div>Security Q2: @Model.Sq2</div>

						</div>
						<footer>
							<a href="@Url.Action("UpdateAgent","Admin", new { id = Model.UserId })"
							   class="btn btn-info">Update</a>
							<a href="@Url.Action("DeleteAgent", "Admin", new { id = Model.UserId })"
							   class="btn btn-danger">Delete</a>
						</footer>
					</div>
				</div>
			}
		else
		{
			<div>NoData Found</div>
		}

	}
</div>