@model Foodiee.Models.Rating

<style>
    .star-rating {
        unicode-bidi: bidi-override;
        direction: rtl;
        display: inline-flex;
        gap: 0.2em;
    }

        .star-rating input[type="radio"] {
            display: none;
        }

        .star-rating label {
            color: #ccc;
            transition: color 0.2s;
        }

            .star-rating input[type="radio"]:checked ~ label,
            .star-rating label:hover,
            .star-rating label:hover ~ label {
                color: #ff3c58;
            }
</style>


<form method="post" asp-action="Ratingreview" class="p-4 rounded" style="max-width: 500px;">
    <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
    <input type="hidden" asp-for="FoodItemId" value="@ViewBag.FoodItemId" />

    <div class="mb-3">
        <label asp-for="FoodRating" class="form-label text-dark">Food Rating</label>
        <div class="star-rating" style="font-size: 2rem; direction: rtl;">
            <input type="radio" id="star15" name="FoodRating" value="5" /><label for="star15" title="4 stars" style="cursor:pointer;">&#9733;</label>
            <input type="radio" id="star14" name="FoodRating" value="4" /><label for="star14" title="4 stars" style="cursor:pointer;">&#9733;</label>
            <input type="radio" id="star13" name="FoodRating" value="3" /><label for="star13" title="3 stars" style="cursor:pointer;">&#9733;</label>
            <input type="radio" id="star12" name="FoodRating" value="2" /><label for="star12" title="2 stars" style="cursor:pointer;">&#9733;</label>
            <input type="radio" id="star11" name="FoodRating" value="1" /><label for="star11" title="1 star" style="cursor:pointer;">&#9733;</label>
        </div>
    </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="RestRating" class="form-label text-dark">Restaurant Rating</label>
        <div class="star-rating" style="font-size: 2rem; direction: rtl;">
            <div class="star-rating" style="font-size: 2rem; direction: rtl;">
                <input type="radio" id="star5" name="RestRating" value="5" /><label for="star5" title="4 stars" style="cursor:pointer;">&#9733;</label>
                <input type="radio" id="star4" name="RestRating" value="4" /><label for="star4" title="4 stars" style="cursor:pointer;">&#9733;</label>
                <input type="radio" id="star3" name="RestRating" value="3" /><label for="star3" title="3 stars" style="cursor:pointer;">&#9733;</label>
                <input type="radio" id="star2" name="RestRating" value="2" /><label for="star2" title="2 stars" style="cursor:pointer;">&#9733;</label>
                <input type="radio" id="star1" name="RestRating" value="1" /><label for="star1" title="1 star" style="cursor:pointer;">&#9733;</label>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Comment" class="form-label text-dark"></label>
        <textarea asp-for="Comment" class="form-control" rows="3" placeholder="Write your comment..."></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label text-dark me-3">Was your experience satisfactory?</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" asp-for="Issatisfactory" type="radio" value="true" />
            <label class="form-check-label text-dark" asp-for="Issatisfactory"> Yes</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" asp-for="Issatisfactory" type="radio" value="false" />
            <label class="form-check-label text-dark" asp-for="Issatisfactory">No</label>
        </div>
    </div>


    <div class="text-center mt-3">
        <button type="submit" class="btn btn-danger px-4">Submit</button>
    </div>
</form>
